        <activity android:name=".ui.fragment.home.home_detail.HomeRecommendActivity" />
        <activity android:name=".ui.fragment.home.home_detail.HomeRecentActivity" />
        <activity android:name=".ui.fragment.home.home_detail.HomeNewActivity" />
