<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeKeywordText"> <!-- 홈화면 키워드 스타일-->
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">@font/scdream5</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:letterSpacing">-0.06</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name = "HomeTitleText"> <!-- 홈화면 제목 스타일-->
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">@font/scdream2</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:letterSpacing">-0.06</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name = "HomeSubTitleText"> <!-- 홈화면 소제목 스타일-->
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">@font/ko_pub_dotum_medium</item>
        <item name="android:textColor">#404040</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <style name ="HomeRcName"> <!-- home recycler common 타이틀 style-->
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#404040</item>
        <item name="android:fontFamily">@font/ko_pub_dotum_medium</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <style name ="HomeRcPrice">  <!-- home recycler common 가격 style-->
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/scdream5</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:letterSpacing">-0.08</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>
    <style name ="HomeRcFollowName">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <style name ="HomeRcFollowhashtag">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="RoundFollowBtn">
        <item name="android:background">@drawable/btn_recycler_follow</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingRight">26dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="myRatingBar" parent="@android:style/Widget.RatingBar"> <!-- 홈 팔로워 별점 -->
        <item name="android:minHeight">2dp</item>
    </style>

    <style name ="HomeRvAuctionTitle">  <!-- home recycler 경매 타이틀 style-->
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/scdream5</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">10sp</item>
    </style>

    <style name ="HomeRvAuctionCloset"> <!-- home recycler 경매 옷이름  style-->
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ko_pub_dotum_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">150dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>


    <style name="RoundEditText">
        <item name="android:background">@drawable/et_round_corner</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="TextView_For_EditText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorForTextView</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="BlackButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/btn_black</item>
    </style>
    <style name="TabTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>                                <!-- 배경 -->
        <item name="android:textColorPrimary">@android:color/white</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@android:color/black</item>     <!-- 탭바 텍스트 -->
        <item name="colorAccent">@android:color/white</item>                    <!-- 하단 움직이는 바 색-->
    </style>



</resources>
