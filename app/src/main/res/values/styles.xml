<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "HomeTitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name = "HomeSubTitleText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginBottom">26dp</item>
    </style>
    <style name ="HomeRcName">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <style name ="HomeRcPrice">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <style name ="HomeRcFollowName">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <style name ="HomeRcFollowhashtag">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="RoundFollowBtn">
        <item name="android:background">@drawable/btn_recycler_follow</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingRight">26dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">2dp</item>
    </style>

    <style name ="HomeRcOctionTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

    <style name ="HomeRcOctionCloset">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">156dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>


    <style name="RoundEditText">
        <item name="android:background">@drawable/et_round_corner</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="TextView_For_Intro">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="TextView_For_EditText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorForTextView</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="BlackButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/btn_black</item>
    </style>
    <style name="TabTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>                                <!-- 배경 -->
        <item name="android:textColorPrimary">@android:color/white</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@android:color/black</item>     <!-- 탭바 텍스트 -->
        <item name="colorAccent">@android:color/white</item>                    <!-- 하단 움직이는 바 색-->
    </style>
    <style name="TextView_For_Cart">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:fontFamily">@font/ko_pub</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="TextView_For_Purchase_Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:fontFamily">@font/ko_pub</item>
    </style>
    <style name="TextView_For_Purchase_request">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#414141</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:fontFamily">@font/ko_pub</item>
    </style>
    <style name="EditTExt_For_Purchase_request">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#414141</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:fontFamily">@font/ko_pub</item>
    </style>
</resources>
