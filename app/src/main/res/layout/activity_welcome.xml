<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_img"
    tools:context=".ui.WelcomeActivity">
    <View
        android:background="@drawable/welcome_view_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginTop="104dp"
        android:adjustViewBounds="true"
        android:src="@drawable/home_logo_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <TextView
            android:id="@+id/tv_welcome_only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ko_pub"
            android:lineSpacingExtra="10sp"
            android:textColor="@color/colorWhite"
            android:textFontWeight="500"
            android:textSize="18sp"
            android:text="오직 당신을 위한 " />

        <TextView
            android:id="@+id/tv_welcome_flatform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ko_pub"
            android:lineSpacingExtra="10sp"
            android:textColor="@color/colorWhite"
            android:textFontWeight="900"
            android:textSize="18sp"
            android:text="빈티지 플랫폼" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_welcome_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/btn_round_white_welcome"
        android:fontFamily="@font/ko_pub"
        android:lineSpacingExtra="8sp"
        android:text="플러프 시작하기"
        android:textColor="@color/colorBlack"
        android:textFontWeight="800"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>