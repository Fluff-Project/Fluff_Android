<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="25dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--home 입고알림, 추천, 최근 리사이클러뷰 사용 -->

    <ImageView
        android:id="@+id/img_rc_dress"
        android:layout_width="182dp"
        android:layout_height="216dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="옷이름"
        style="@style/HomeRcName"
        app:layout_constraintTop_toBottomOf="@id/img_rc_dress"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_rc_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가격"
        style="@style/HomeRcPrice"
        app:layout_constraintTop_toBottomOf="@id/tv_rc_title"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>