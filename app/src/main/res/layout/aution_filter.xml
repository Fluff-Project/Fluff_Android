<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCharcoal">

    <TextView
        android:id="@+id/txt_aution_filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:text="빈티지 필터"
        android:fontFamily="@font/ko_pub"
        android:textFontWeight="900"
        android:textColor="@color/colorWhite"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_aution_filter_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="17dp"
        android:text="CLEAR"
        android:fontFamily="@font/ko_pub"
        android:textFontWeight="900"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_aution_filter_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="컬러"
        android:fontFamily="@font/ko_pub"
        android:textFontWeight="900"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_aution_filter_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/txt_aution_filter_color"
        tools:layout_editor_absoluteX="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp">
            <CheckBox
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_filter_color_black"
                android:button="@null"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
            <CheckBox
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_filter_color_white"
                android:button="@null"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
            <CheckBox
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/selector_filter_color_grey"
            android:button="@null"
            android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
            <CheckBox
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_filter_color_beige"
                android:button="@null"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
            <CheckBox
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_filter_color_brown"
                android:button="@null"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>