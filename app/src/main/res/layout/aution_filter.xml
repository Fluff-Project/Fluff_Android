<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCharcoal">

    <TextView
        android:id="@+id/txt_aution_filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:text="빈티지 필터"
        android:fontFamily="@font/ko_pub"
        android:textFontWeight="900"
        android:textColor="@color/colorWhite"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_aution_filter_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="17dp"
        android:text="CLEAR"
        android:fontFamily="@font/ko_pub"
        android:textFontWeight="900"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_aution_filter_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="컬러"
        android:fontFamily="@font/ko_pub"
        android:textFontWeight="900"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_aution_filter_title" />

    <LinearLayout
        android:id="@+id/linear_aution_filter_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/txt_aution_filter_color"
        tools:layout_editor_absoluteX="0dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp">
            <CheckBox
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_filter_color_black"
                android:button="@null"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
            <CheckBox
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_filter_color_white"
                android:button="@null"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
            <CheckBox
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/selector_filter_color_grey"
            android:button="@null"
            android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
            <CheckBox
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_filter_color_beige"
                android:button="@null"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
            <CheckBox
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_filter_color_brown"
                android:button="@null"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp">
            <CheckBox
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_filter_color_chorale"
                android:button="@null"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
            <CheckBox
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_filter_color_orange"
                android:button="@null"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
            <CheckBox
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_filter_color_darkgreen"
                android:button="@null"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
            <CheckBox
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_filter_color_lightblue"
                android:button="@null"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
            <CheckBox
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_filter_color_darkblue"
                android:button="@null"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp">
            <CheckBox
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_filter_color_check"
                android:button="@null"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
            <CheckBox
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_filter_color_dot"
                android:button="@null"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
            <CheckBox
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_filter_color_purple"
                android:button="@null"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
            <CheckBox
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_filter_color_pink"
                android:button="@null"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_aution_filter_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="카테고리"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_aution_filter_color" />

    <ScrollView
        android:id="@+id/scroll_aution_filter_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_aution_filter_category"
        tools:layout_editor_absoluteX="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:button="@null"
                    android:drawableTop="@drawable/selector_filter_category_outer"
                    android:text="아우터"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:button="@null"
                    android:drawableTop="@drawable/selector_filter_category_top"
                    android:text="상의"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:button="@null"
                    android:drawableTop="@drawable/selector_filter_category_bottom"
                    android:text="바지"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:button="@null"
                    android:drawableTop="@drawable/selector_filter_category_skirt"
                    android:text="스커트"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:button="@null"
                    android:drawableTop="@drawable/selector_filter_category_dress"
                    android:text="원피스"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:button="@null"
                    android:drawableTop="@drawable/selector_filter_category_items"
                    android:text="패션 잡화"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite" />
            </RadioGroup>
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/txt_aution_filter_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="사이즈"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_aution_filter_category" />

    <LinearLayout
        android:id="@+id/linear_aution_filter_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/txt_aution_filter_size"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/selector_btn_filter_size"
            android:gravity="center"
            android:paddingVertical="4dp"
            android:text="S"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/selector_btn_filter_size"
            android:gravity="center"
            android:paddingVertical="4dp"
            android:text="M"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/selector_btn_filter_size"
            android:gravity="center"
            android:paddingVertical="4dp"
            android:text="L"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/selector_btn_filter_size"
            android:gravity="center"
            android:paddingVertical="4dp"
            android:text="XL"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/selector_btn_filter_size"
            android:gravity="center"
            android:paddingVertical="4dp"
            android:text="XXL"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/selector_filter_want_btn_background"
        android:button="@null"
        android:text="내가 팔로우하는 셀러들의 옷만 보기"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_aution_filter_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCharcoal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="15dp"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="적용"
            android:textSize="15sp"
            android:background="@drawable/et_round_corner"
            android:layout_marginHorizontal="21dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>