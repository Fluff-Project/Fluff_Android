<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <kr.market.fluff.ui.fragment.auction.SquareFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img_item_magazine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
    </kr.market.fluff.ui.fragment.auction.SquareFrameLayout>


    <View
        android:layout_width="297dp"
        android:layout_height="match_parent"
        android:background="#79000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_magazine_logo"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="38dp"
        android:adjustViewBounds="true"
        android:src="@drawable/home_logo_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="18dp" />

    <TextView
        android:id="@+id/tv_magazine_title"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/sc_dream"
        android:lineSpacingExtra="13sp"
        android:text="군복에서 시작 된\n빈티지 아이템"
        android:textColor="@color/colorWhite"
        android:textFontWeight="400"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/guideline15"
        app:layout_constraintTop_toBottomOf="@+id/tv_magazine_article" />

    <TextView
        android:id="@+id/tv_magazine_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/sc_dream"
        android:textColor="@color/colorWhite"
        android:textFontWeight="400"
        android:textSize="13sp"
        android:lineSpacingExtra="6sp"
        android:gravity="center_horizontal"
        android:text="2019.12.12"
        app:layout_constraintStart_toStartOf="@+id/guideline15"
        app:layout_constraintTop_toBottomOf="@+id/tv_magazine_title" />

    <TextView
        android:id="@+id/tv_magazine_article"
        android:layout_width="83dp"
        android:layout_height="23dp"
        android:paddingLeft="4dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/sc_dream"
        android:lineSpacingExtra="8sp"
        android:background="#000000"
        android:text="Article."
        android:textColor="@color/colorWhite"
        android:textFontWeight="600"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/guideline15"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="40dp"
        android:layout_height="2dp"
        android:layout_marginTop="22dp"
        android:background="#ffffff"
        app:layout_constraintStart_toStartOf="@+id/guideline15"
        app:layout_constraintTop_toBottomOf="@+id/tv_magazine_date" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:src="@drawable/ic_right_white"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/guideline15"
        app:layout_constraintTop_toTopOf="@+id/view2" />

</androidx.constraintlayout.widget.ConstraintLayout>