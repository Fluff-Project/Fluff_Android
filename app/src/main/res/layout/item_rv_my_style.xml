<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_my_style"
        android:layout_width="157dp"
        android:layout_height="157dp"
        android:layout_margin="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/style_img" />

    <ImageView
        android:id="@+id/img_my_style_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/img_my_style"
        app:layout_constraintEnd_toEndOf="@+id/img_my_style"
        app:layout_constraintStart_toStartOf="@+id/img_my_style"
        app:layout_constraintTop_toTopOf="@+id/img_my_style"
        app:srcCompat="@drawable/checked_ic"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>