<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ui.activity.RegisterActivity">


    <ProgressBar
        android:id="@+id/pb_register_loading"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:indeterminate="false"
        android:progress="100"
        android:progressDrawable="@drawable/register_progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_register_above_input"
        style="@style/TextView_For_EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="80dp"
        android:text="이메일"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_register_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/RoundEditText"
        android:inputType="text"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:hint="비밀번호를 적어주세요."
        android:fontFamily="@font/ko_pub"
        android:textFontWeight="900"
        android:paddingLeft="16dp"
        app:layout_constraintStart_toStartOf="@+id/tv_register_above_input"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_above_input"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/et_register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="이메일을 적어주세요."
        android:fontFamily="@font/ko_pub"
        android:textFontWeight="900"
        style="@style/RoundEditText"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="16dp"
        app:layout_constraintStart_toStartOf="@+id/tv_register_above_input"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_above_input"/>
    <ImageView
        android:id="@+id/img_id_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_check"
        app:layout_constraintBottom_toBottomOf="@+id/et_register_email"
        app:layout_constraintEnd_toEndOf="@+id/et_register_email"
        app:layout_constraintTop_toTopOf="@+id/et_register_email"
        app:layout_constraintVertical_bias="0.535"/>

    <LinearLayout
        android:id="@+id/ll_register_gender"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="@+id/tv_register_above_input"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_above_input"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/ll_register_male"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/gender_gray_background"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_register_male"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_gray_circle" />
            <TextView
                android:id="@+id/tv_register_male"
                android:layout_width="wrap_content"
                android:fontFamily="@font/ko_pub"
                android:textFontWeight="900"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGenderGrayText"
                android:layout_gravity="center"
                android:text="남자" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_register_female"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gender_gray_background"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_register_female"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_gray_circle" />
            <TextView
                android:id="@+id/tv_register_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ko_pub"
                android:textFontWeight="900"
                android:textColor="@color/colorGenderGrayText"
                android:layout_gravity="center"
                android:text="여자" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_register_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="112dp"
        android:text="다음"
        android:fontFamily="@font/ko_pub"
        android:textFontWeight="900"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/btn_disable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>