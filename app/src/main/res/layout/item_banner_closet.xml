<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl_banner_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <ImageView
        android:id="@+id/img_banner_rv_profile"
        android:layout_width="136dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img_banner_rv_heartbtn"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/img_banner_rv_profile"
            android:layout_alignBottom="@id/img_banner_rv_profile"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_empty_heart_white"

            />


    </RelativeLayout>


    <TextView
        android:id="@+id/txt_banner_rv_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#989898"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="6sp"
        android:text="셀러 이름"
        android:fontFamily="@font/ko_pub_dotum_medium"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/rl_banner_rv"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_banner_rv_closet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#000000"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="7sp"
        android:text="옷이름"
        android:fontFamily="@font/ko_pub_dotum_medium"
        app:layout_constraintTop_toBottomOf="@id/txt_banner_rv_seller"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_banner_rv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="4sp"
        android:text="가격"
        android:textColor="#000000"
        android:textSize="14sp"
        android:fontFamily="@font/scdream5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_banner_rv_closet" />


</androidx.constraintlayout.widget.ConstraintLayout>