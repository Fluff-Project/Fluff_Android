<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.glance.GlanceFragment">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_glance_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <EditText
                android:id="@+id/edt_glance_search_text"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edt_search_background"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toStartOf="@+id/imageView2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_glance_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:src="@drawable/search_ic"
                app:layout_constraintBottom_toBottomOf="@+id/edt_glance_search_text"
                app:layout_constraintStart_toStartOf="@+id/edt_glance_search_text"
                app:layout_constraintTop_toTopOf="@+id/edt_glance_search_text" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:src="@drawable/shoppingbag_ic"
                app:layout_constraintBottom_toBottomOf="@+id/edt_glance_search_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/edt_glance_search_text" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_glance_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingTop="28dp"
                android:paddingHorizontal="30dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_glance_search_text"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/btn_glance_filter_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:paddingHorizontal="43dp"
                android:background="@drawable/my_style_btn_black_background"
                android:text="필터"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/glance_filter_blur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#aa000000"
            android:visibility="gone"/>
        <include
            android:id="@+id/glance_filter"
            layout="@layout/glance_filter" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>